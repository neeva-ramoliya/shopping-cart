large = 'screen and (min-width: 1000px)'
medium = 'screen and (max-width: 999px)'

.product-list
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: center

    .product-item
        width: 235px
        height: 250px
        border: 1px solid #efefef
        margin: 10px 10px
        box-sizing: border-box
    
    @media large
        .product-item:nth-child(4n)
            margin-right: 0
        .product-item:first-child
            margin-left: 0
        .product-item:nth-child(5n)
            margin-left: 0
    
    .card
        box-shadow: 0px 1px 3px 0px rgba(0, 0, 0, 0.2), 0px 1px 1px 0px rgba(0, 0, 0, 0.14), 0px 2px 1px -1px rgba(0, 0, 0, 0.12)
        position: relative
        
        .card-tag
            position: absolute
            background-color: #70c35d
            color: #fff
            top: 20px
            text-align: center
            height: 30px
            line-height: 30px
            padding: 0 5px
            left: -1px
        .card-info
            height: 70px
            background-color: #efefef
            position: relative
            padding: 0 5px
            

            .product-name 
                line-height: 30px

            .product-price
                line-height: 40px
                font-size: 1.2rem

                .canceled-amount
                    position: relative
                .canceled-amount::after
                    content: ''
                    border-bottom: 3px solid red
                    position: absolute
                    left: 0
                    top: 40%
                    width: 100%

            .cart-button
                position: absolute
                right: 5px
                bottom: 10px
                height: 25px
        .image-container
            height: 180px
            width: 100%
            .card-image
                margin: auto
                padding: 20px 0
                width: 140px
                height: 140px
                img 
                    width: 100%
                    height: 100%
